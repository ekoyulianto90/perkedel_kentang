<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skripsi.ekoyulianto.biologipedia">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookshelf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="Detail"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BantuanActivity"
            android:label="Bantuan"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TentangActivity"
            android:label="Tentang"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdminActivity"
            android:label="Administrator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditActivity"
            android:label="Edit Data"
            android:parentActivityName=".AdminActivity" />
        <activity
            android:name=".AddActivity"
            android:label="Tambah Data"
            android:parentActivityName=".AdminActivity" />
        <activity
            android:name=".DetailAdmActivity"
            android:label="Detail Data"
            android:parentActivityName=".AdminActivity" />

    </application>

</manifest>