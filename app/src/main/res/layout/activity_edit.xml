<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skripsi.ekoyulianto.biologipedia.AddActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edIstilah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="Istilah"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edIstilah"
                android:ems="10"
                android:hint="Deskripsi"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnPickImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edDeskripsi"
                android:layout_marginTop="16dp"
                android:text="Muat Gambar" />

            <ImageView
                android:id="@+id/imgRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="Simpan" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
